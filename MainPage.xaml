<Window x:Class="FinalFinanceTrack.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Page" Height="500" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- User Management Button -->
        <Button x:Name="UserManagementButton" Content="USER MANAGEMENT" Width="280" Height="53" Margin="0,200,0,0"
                Background="#D3D3D3" Foreground="Black" BorderBrush="#A9A9A9" Click="UserManagementButton_Click"
                HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Settings Button with Symbol -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Grid.Column="1">
            <Button Name="SettingsButton" Content="⚙" Width="40" Height="40" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
