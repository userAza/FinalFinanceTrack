<Window x:Class="FinalFinanceTrack.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reset Password" Height="500" Width="800">
    <Grid Background="#FFF9F6F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- New Password -->
        <TextBlock Margin="20,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" FontWeight="Normal">
            New Password:
        </TextBlock>
        <PasswordBox x:Name="newPasswordBox" Margin="20,50,20,0" Height="30" VerticalAlignment="Top"/>

        <!-- Confirm Password -->
        <TextBlock Margin="20,90,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" FontWeight="Normal">
            Confirm Password:
        </TextBlock>
        <PasswordBox x:Name="confirmPasswordBox" Margin="20,120,20,0" Height="30" VerticalAlignment="Top"/>

        <!-- Submit Button -->
        <Button Content="Submit" Margin="160,160,160,0" Width="80" Height="30" Click="Submit_Click" VerticalAlignment="Top"/>
    </Grid>
</Window>
