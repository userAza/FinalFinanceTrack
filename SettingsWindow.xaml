<Window x:Class="FinalFinanceTrack.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Label Content="Settings and Services" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="16" FontWeight="Bold"/>

        <Button Content="Return" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Click="ReturnButton_Click"/>

        <Label x:Name="userLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,60,0,0" FontSize="14"/>

        <Button Content="Update Password" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="10,100,0,0" Click="UpdatePassword_Click"/>

        <Button Content="Logout" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="10,140,0,0" Click="Logout_Click"/>

        <Button Content="Copyright/Regulation" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="10,180,0,0" Click="GeneratePolicyDocument_Click"/>
    </Grid>
</Window>
