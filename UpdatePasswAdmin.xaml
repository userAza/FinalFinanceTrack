<Window x:Class="FinalFinanceTrack.UpdatePasswAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Password" Height="500" Width="800">
    <Grid>
        <!-- Text-based Back Button -->
        <Button Margin="10,10,0,0" Width="54" Height="23"
                Content="Back" Click="Back_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Background="DarkGray" Foreground="White"
                FontSize="12" Padding="10,0">
        </Button>

        <!-- Password Update Fields and Button -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Old Password:" Margin="0,0,0,10" VerticalAlignment="Top"/>
            <PasswordBox x:Name="oldPasswordBox" Width="360"/>

            <TextBlock Text="New Password:" Margin="0,10,0,10" VerticalAlignment="Top"/>
            <PasswordBox x:Name="newPasswordBox" Width="360"/>

            <TextBlock Text="Confirm Password:" Margin="0,10,0,10" VerticalAlignment="Top"/>
            <PasswordBox x:Name="confirmPasswordBox" Width="360"/>

            <Button Content="OK" Width="100" Margin="0,20,0,0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
