<Window x:Class="FinalFinanceTrack.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History" Height="500" Width="800">
    <Grid Background="#FFF9F6F4">
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,10,0,0" Click="button1_Click"/>

        <TextBlock Text="Search by Year and Month (e.g., 2023 05)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,60,0,0"/>

        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="220,60,0,0" Click="button2_Click"/>
        <Button x:Name="FilterButton" Content="Filter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="330,60,0,0" Click="FilterButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="440,60,0,0" Click="button3_Click"/>

        <TextBlock x:Name="HistoryTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
