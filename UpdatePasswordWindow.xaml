<Window x:Class="FinalFinanceTrack.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Password" Height="400" Width="800">
    <Grid>
        <Label Content="Old Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <PasswordBox x:Name="oldPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>

        <Label Content="New Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="newPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="200"/>

        <Label Content="Confirm Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <PasswordBox x:Name="confirmPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,90,0,0" Width="200"/>

        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="50,150,0,0" Click="OkButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="150,150,0,0" Click="CancelButton_Click"/>
        <Button Content="Back to Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="250,150,0,0" Click="BackToSettingsButton_Click"/>
    </Grid>
</Window>
