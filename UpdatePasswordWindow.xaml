<Window x:Class="FinalFinanceTrack.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Password" Height="500" Width="800">
    <Grid>
        <TextBlock Text="Old Password:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="oldPasswordBox" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="360"/>

        <TextBlock Text="New Password:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="newPasswordBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="360"/>

        <TextBlock Text="Confirm Password:" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="confirmPasswordBox" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="360"/>

        <Button Content="OK" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="100" Click="OkButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="120,200,0,0" VerticalAlignment="Top" Width="100" Click="CancelButton_Click"/>
        <Button Content="Back to Settings" HorizontalAlignment="Left" Margin="230,200,0,0" VerticalAlignment="Top" Width="140" Click="BackToSettingsButton_Click"/>
    </Grid>
</Window>
