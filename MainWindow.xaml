<Window x:Class="FinalFinanceTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalFinanceTrack"
        mc:Ignorable="d"
        Title="Welcome Page" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>


        <!-- LOGO -->

        <Image Source="resources/logo.png" Width="266" Height="153" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="47,40,0,0" Grid.Column="1" />




        <!-- THE 3 BUTTONS -->

        <StackPanel VerticalAlignment="Top" Margin="0,247,0,0" Grid.ColumnSpan="2">
            <Button Content="Log In" Width="150" Height="40" HorizontalAlignment="Center" Margin="0,0,0,10" Click="Login_Click" />
            <Button Content="Sign Up" Width="150" Height="40" HorizontalAlignment="Center" Margin="0,0,0,10" Click="SignUp_Click" />
            <Button Content="Admin" Width="100" Height="40" HorizontalAlignment="Center" Click="Admin_Click" />
        </StackPanel>
    </Grid>
</Window>
